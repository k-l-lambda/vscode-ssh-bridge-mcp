{
  "name": "ssh-bridge-mcp",
  "displayName": "SSH Bridge MCP",
  "description": "MCP toolkit for VS Code Remote SSH - notifications, TTS, and browser automation",
  "version": "0.1.0",
  "publisher": "KLLambda",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/k-l-lambda/vscode-ssh-bridge-mcp"
  },
  "bugs": {
    "url": "https://github.com/k-l-lambda/vscode-ssh-bridge-mcp/issues"
  },
  "homepage": "https://github.com/k-l-lambda/vscode-ssh-bridge-mcp#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ssh-bridge-mcp.playNotification",
        "title": "SSH Bridge: Play Notification Sound"
      },
      {
        "command": "ssh-bridge-mcp.testConnection",
        "title": "SSH Bridge: Test MCP Connection"
      },
      {
        "command": "ssh-bridge-mcp.showSetup",
        "title": "SSH Bridge: Show Setup Instructions"
      },
      {
        "command": "ssh-bridge-mcp.manageTunnels",
        "title": "SSH Bridge: Manage Remote Tunnels"
      }
    ],
    "configuration": {
      "title": "SSH Bridge MCP",
      "properties": {
        "ssh-bridge-mcp.notificationSound": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "success",
            "error",
            "warning"
          ],
          "description": "Notification sound type"
        },
        "ssh-bridge-mcp.mcpServers": {
          "type": "array",
          "default": [],
          "description": "List of MCP server endpoints (SSE)"
        },
        "ssh-bridge-mcp.remoteTunnels": {
          "type": "array",
          "default": [],
          "description": "List of remote hosts to create reverse SSH tunnels for",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "description": "Remote host in format user@host:port or user@host"
              },
              "remotePort": {
                "type": "number",
                "description": "Remote port to bind (default: 9847)",
                "default": 9847
              },
              "identityFile": {
                "type": "string",
                "description": "Path to SSH identity file (optional)"
              },
              "enabled": {
                "type": "boolean",
                "description": "Enable this tunnel",
                "default": true
              }
            },
            "required": ["host"]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "puppeteer": "^24.33.0"
  }
}
